<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_TranquilizerRifle</defName>
    <label>tranquilizer rifle</label>
    <description>Rifle shooting bullets filled with tranquilizer.</description>
    <graphicData>
      <texPath>TranquilizerMod/Things/Item/Equipment/WeaponRanged/TranquilizerRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>TranquilizerGuns</researchPrerequisite>
    </recipeMaker>
    <generateCommonality>0.5</generateCommonality>
    <statBases>
      <WorkToMake>25000</WorkToMake>
      <Mass>2.0</Mass>
      <AccuracyTouch>0.85</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.80</AccuracyLong>
      <RangedWeapon_Cooldown>1.26</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>150</Steel>
      <ComponentIndustrial>10</ComponentIndustrial>
      <TranquilizerLiquid>8</TranquilizerLiquid>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_TranquillizerBullet</defaultProjectile>
        <warmupTime>2.0</warmupTime>
        <range>18</range>
        <soundCast>SilencedTranquilizer</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.8</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.9</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_Tranquillzer_Pistol</defName>
    <label>tranquilizer pistol</label>
    <description>Pistol shooting bullets filled with tranquilizer.</description>
    <graphicData>
      <texPath>TranquilizerMod/Things/Item/Equipment/WeaponRanged/TranquilizerPistol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Autopistol</soundInteract>
    <recipeMaker>
      <researchPrerequisite>TranquilizerGuns</researchPrerequisite>
    </recipeMaker>
    <statBases>
      <WorkToMake>15000</WorkToMake>
      <Mass>1.0</Mass>
      <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.80</AccuracyMedium>
      <AccuracyLong>0.50</AccuracyLong>
      <RangedWeapon_Cooldown>1.38</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>SimpleGun</li>
    </weaponTags>
    <costList>
      <Steel>70</Steel>
      <ComponentIndustrial>7</ComponentIndustrial>
      <TranquilizerLiquid>4</TranquilizerLiquid>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_TranquillizerBullet</defaultProjectile>
        <warmupTime>1.1</warmupTime>
        <range>12</range>
        <soundCast>Shot_Autopistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>
